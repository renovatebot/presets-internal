{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Preset for use with Renovate's repos using node",
  "extends": ["github>renovatebot/presets-internal:base", "group:linters"],
  "prBodyDefinitions": {
    "Adoption": "![adoption](https://badges-beta.renovateapi.com/packages/adoption-slim/npm/{{replace '/' '%2f' depName}}/{{{toVersion}}})",
    "Compatibility": "![compatibility](https://badges-beta.renovateapi.com/packages/compatibility-slim/npm/{{replace '/' '%2f' depName}}/{{{fromVersion}}}/{{{toVersion}}})"
  },
  "packageRules": [
    {
      "datasources": ["npm"],
      "updateTypes": ["patch", "minor", "major"],
      "prBodyColumns": ["Package", "Update", "Type", "Change", "Adoption", "Compatibility"]
    }
  ],
  "postUpdateOptions": ["yarnDedupeHighest"]
}
