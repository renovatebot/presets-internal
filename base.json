{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Base preset for use with Renovate's repos",
  "extends": [
    "config:base",
    ":rebaseStalePrs",
    ":masterIssue",
    ":semanticCommits",
    ":semanticCommitScope(deps)",
    "docker:enableMajor",
    ":maintainLockFilesWeekly",
    "group:linters"
  ],
  "assignees": ["viceice"],
  "automergeType": "branch",
  "prCreation": "not-pending",
  "docker": {
    "pinDigests": true
  },
  "packageRules": [
    {
      "updateTypes": ["major"],
      "extends": [":masterIssueApproval"]
    },
    {
      "description": "Automerge non-major updates",
      "updateTypes": ["minor", "patch", "digest"],
      "automerge": true
    },
    {
      "depTypeList": ["devDependencies"],
      "updateTypes": ["pin", "digest", "patch", "minor"],
      "automerge": true,
      "masterIssueApproval": false
    },
    {
      "description": "Auto aprove any renovate dependencies",
      "packageNames": ["renovate"],
      "packagePatterns": ["^renovate/", "^renovatebot/"],
      "stabilityDays": 0,
      "masterIssueApproval": false
    },
    {
      "description": "Automerge renovate minor and lower updates",
      "packageNames": ["renovate"],
      "packagePatterns": ["^renovate/"],
      "updateTypes": ["pin", "digest", "patch", "minor"],
      "automerge": true,
      "separateMinorPatch": false
    },
    {
      "packageNames": ["renovatebot/internal-tools"],
      "versioning": "regex:^v(?<major>\\d+)(\\.(?<minor>\\d+)\\.(?<patch>\\d+))?$"
    },
    {
      "packageNames": ["prettier"],
      "packagePatterns": ["^@prettier\\/", "^prettier-plugin-"],
      "groupName": "prettier packages"
    }
  ]
}
